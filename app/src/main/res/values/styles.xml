<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>-->
    </style>
    <!-- Light base activity theme-->
    <style name="AppTheme.Primary.Base.Light" parent="Theme.AppCompat.NoActionBar">
        <item name="primaryTextColor">#33343B</item>
        <item name="secondaryTextColor">#8033343B</item>
        <item name="backgroundCardColor">#FFFF</item>
        <item name="searchIconPlaceHolder">@drawable/ic_search_black_36px</item>
        <item name="filterIconPlaceHolder">@drawable/ic_filter_list_black_24dp</item>
        <item name="homeIconPlaceHolder">@drawable/ic_home_black_24dp</item>
        <item name="favIconPlaceHolder">@drawable/ic_favorite_black_24dp</item>
        <item name="sunIconPlaceHolder">@drawable/ic_wb_sunny_black_24dp</item>
        <item name="moonIconPlaceHolder">@drawable/ic_moon_black_24dp</item>
        <item name="unfavIconPlaceHolder">@drawable/ic_favorite_border_black_24dp</item>
        <item name="hambIconPlaceHolder">@drawable/ic_dehaze_black_24dp</item>
        <item name="calIconPlaceHolder">@drawable/ic_today_black_24dp</item>
        <item name="backIconPlaceHolder">@drawable/ic_arrow_back_black_16dp</item>
        <item name="closeIconPlaceHolder">@drawable/ic_close_black_16dp</item>
        <item name="voiceIconPlaceHolder">@drawable/ic_keyboard_voice_black_16dp</item>
        <item name="dividerColor">#F2F2F3</item>
        <item name="greyColor">#F2F2F3</item>
    </style>
    <!-- Dark base activity theme-->
    <style name="AppTheme.Primary.Base.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="primaryTextColor">#F4F4F6</item>
        <item name="secondaryTextColor">#96F4F4F6</item>
        <item name="backgroundCardColor">#28292e</item>
        <item name="searchIconPlaceHolder">@drawable/ic_search_white_36px</item>
        <item name="filterIconPlaceHolder">@drawable/ic_filter_list_white_24dp</item>
        <item name="homeIconPlaceHolder">@drawable/ic_home_white_24dp</item>
        <item name="favIconPlaceHolder">@drawable/ic_favorite_white_24dp</item>
        <item name="sunIconPlaceHolder">@drawable/ic_wb_sunny_white_24dp</item>
        <item name="moonIconPlaceHolder">@drawable/ic_moon_white_24dp</item>
        <item name="unfavIconPlaceHolder">@drawable/ic_favorite_border_white_24dp</item>
        <item name="hambIconPlaceHolder">@drawable/ic_dehaze_white_24dp</item>
        <item name="calIconPlaceHolder">@drawable/ic_today_white_24dp</item>
        <item name="backIconPlaceHolder">@drawable/ic_arrow_back_white_16dp</item>
        <item name="closeIconPlaceHolder">@drawable/ic_close_white_16dp</item>
        <item name="voiceIconPlaceHolder">@drawable/ic_keyboard_voice_white_16dp</item>
        <item name="dividerColor">#F2F2F3</item>
        <item name="greyColor">@android:color/darker_gray</item>
    </style>
    <style name="FeedActivityThemeLight" parent="AppTheme.Primary.Base.Light">
        <item name="android:windowBackground">@color/lightBackgound</item>
    </style>

    <style name="FeedActivityThemeDark" parent="AppTheme.Primary.Base.Dark">
        <item name="android:windowBackground">@color/darkBackground</item>
    </style>
</resources>
